<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_bottom_gray_line_normal"
    android:orientation="horizontal" >
    
	<ImageView 
	    android:id="@+id/prepare_to_train_list_action_img"
	    android:layout_width="100dp"
	    android:layout_height="100dp"
	    />
    
	<LinearLayout 
	    android:layout_height="100dp"
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:orientation="vertical"
	    >
	    
	    <TextView 
	        android:id="@+id/prepare_to_train_list_action_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="一二三四五六七"
	        android:layout_marginTop="30dp"
	        android:layout_gravity="center_horizontal"/>
	    
	    <TextView 
	        android:id="@+id/prepare_to_train_list_action_group"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="一二三四五六七"
	        android:layout_marginTop="10dp"
	        android:layout_gravity="center_horizontal"/>
	    
	</LinearLayout>
	
	<RelativeLayout 
	    android:layout_width="80dp"
	    android:layout_height="100dp"
	    >
	    <ImageView 
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:src="@drawable/imgv_action_corner"/>
	    
	    <TextView 
	        android:id="@+id/prepare_to_train_list_action_order"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="1"
	        android:textSize="50dip"
	        android:textColor="@color/white"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentRight="true"/>
	    
	</RelativeLayout>
    
</LinearLayout>
