<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >
        <ImageView 
            android:id="@+id/about_title_btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/image_btn_back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关于"
            android:textSize="20sp"/>
    </RelativeLayout>
    
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    >
	    <ImageView 
	        android:id="@+id/about_ifit_logo"
	        android:layout_width="130dp"
	        android:layout_height="130dp"
	        android:src="@drawable/ic_launcher"
	        android:layout_centerHorizontal="true"/>
	    <TextView 
	        android:id="@+id/about_ifit_text"
	        android:text="I F I T"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/about_ifit_logo"
	        android:layout_marginTop="10dp"
	        android:textSize="30sp"/>
	    <TextView 
	        android:text="版本:1.0.0"
	        android:layout_below="@+id/about_ifit_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dp"
	        android:textSize="20sp"
	        android:textColor="@color/textgray"/>
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:background="@drawable/top_bottom_gray_line_normal">
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginTop="10dp"
	        android:text="该软件开发仅为学习，不用作商业用途。"/>
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:gravity="center"
	        android:text="许多UI功能设计都有模仿一些已经十分完善的软件。"/>
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:gravity="center"
	        android:text="一些代码实现也是学习我网上一些现成的DEMO。"/>
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:gravity="center"
	        android:text="再次声明，此软件仅为学习所用，如果有兴趣，请在新浪微博上留言。"/>
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="10dp"
	        android:text="微博：纸盒子装石头"/>		
	</LinearLayout>
</LinearLayout>
