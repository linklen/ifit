<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    
    
    <RelativeLayout 
        android:id="@+id/edit_plan_in_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView 
            android:id="@+id/edit_plan_in_title_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/image_btn_back"/>
        
        <TextView 
            android:text="编辑计划"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20dip"/>
        
        <TextView
            android:id="@+id/edit_plan_in_title_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="保存"/>
	</RelativeLayout>
	
	<ScrollView 
	    android:id="@+id/edit_plan_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
	
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/titlelayout_bg_normal">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计划封面"
            android:layout_centerVertical="true"
            android:textSize="15dip"
            />
        
        <ImageView 
            android:id="@+id/edit_plan_add_cardimg"
            android:layout_width="80dp"
            android:layout_height="140dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/add_cardimg"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/edit_plan_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/titlelayout_bg_normal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15dip"
            android:text="计划名称"/>
        
        
        <ImageView 
            android:id="@+id/edit_plan_name"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/setting_arrow_in"/>
        
        <TextView 
            android:id="@+id/edit_plan_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15dip"
            android:layout_toLeftOf="@+id/edit_plan_name"
            android:textColor="@color/gray"
            />
    </RelativeLayout>
	
     <RelativeLayout 
        android:id="@+id/edit_plan_Training_site_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/titlelayout_bg_normal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15dip"
            android:text="训练部位"/>
        
        <ImageView 
            android:id="@+id/edit_plan_Training_site"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/setting_arrow_in"/>
        
         <TextView 
   			android:id="@+id/edit_plan_Training_site_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15dip"
            android:layout_toLeftOf="@+id/edit_plan_Training_site"
            android:textColor="@color/gray"
            />
    </RelativeLayout>
    
     <RelativeLayout 
        android:id="@+id/edit_plan_Training_place_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/titlelayout_bg_normal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15dip"
            android:text="地点"/>
        
        <ImageView 
            android:id="@+id/edit_plan_Training_place"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/setting_arrow_in"/>
        <TextView 
            android:id="@+id/edit_plan_Training_place_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15dip"
            
            android:layout_toLeftOf="@+id/edit_plan_Training_place"
            android:textColor="@color/gray"
            />
    </RelativeLayout>
    
     <RelativeLayout 
        android:id="@+id/edit_plan_Training_purpose_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/titlelayout_bg_normal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15dip"
            android:text="目的"/>
        
        <ImageView 
            android:id="@+id/edit_plan_Training_purpose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/setting_arrow_in"/>
        
        <TextView 
            android:id="@+id/edit_plan_Training_purpose_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15dip"
            android:layout_toLeftOf="@+id/edit_plan_Training_purpose"
            android:textColor="@color/gray"
            />
    </RelativeLayout>
    
     <RelativeLayout 
        android:id="@+id/edit_plan_Training_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/titlelayout_bg_normal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15dip"
            android:text="训练时间"/>
        
        <ImageView 
            android:id="@+id/edit_plan_Training_time"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/setting_arrow_in"/>
        
        <TextView 
            android:id="@+id/edit_plan_Training_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15dip"
            android:layout_toLeftOf="@+id/edit_plan_Training_time"
            android:textColor="@color/gray"
            />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/edit_plan_Training_describe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/titlelayout_bg_normal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15dip"
            android:text="计划描述"/>
        
        <ImageView 
            android:id="@+id/edit_plan_Training_describe"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/setting_arrow_in"/>
        
        <TextView 
            android:id="@+id/edit_plan_Training_describe_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:maxWidth="180dp"
            android:ellipsize="end"
            android:textSize="15dip"
            android:layout_toLeftOf="@+id/edit_plan_Training_describe"
            android:textColor="@color/gray"
            />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
      	android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="20dip"
            android:text="动作信息"/>
        
        
    </RelativeLayout>
    
     <LinearLayout
   	   android:id="@+id/edit_plan_add_view"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
       </LinearLayout> 
    
    
    </LinearLayout>
    
	    
	    
    </ScrollView>
    
	<RelativeLayout 
	    android:id="@+id/edit_plan_add_action_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/feed_back_submit_selector">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="添加动作"
	        android:padding="5dp"
	        android:layout_margin="5dp"
	        android:textColor="@color/white"
	        android:textSize="18dip"/>
	</RelativeLayout>
	
</LinearLayout>
