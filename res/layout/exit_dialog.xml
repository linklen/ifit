<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/exit_dialog_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/exit_dialog_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#333"
            android:textSize="20sp"
            android:text="退出ifit" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:text="确定要退出吗？\n记得要回来哦！" /> 
        

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           
            android:layout_marginTop="30dp"
             >
            
            <Button
              android:id="@+id/btn_exit_yes"
              android:layout_width="100dp"
              android:layout_height="40dp"
              android:text="是"
              android:textSize="15sp"
              android:textColor="#fff"
              android:background="@drawable/btn_style_green"
              android:gravity="center"
			  android:onClick="btn_exit_yes"
              />
            
            <Button
              android:id="@+id/btn_exit_no"
              android:layout_width="100dp"
              android:layout_height="40dp"
              android:layout_marginLeft="10dp"
              android:text="否"
              android:textSize="15sp"
              android:textColor="#333"
              android:background="@drawable/btn_style_white"
              android:gravity="center"
			  android:onClick="btn_exit_no"
              />
        </LinearLayout>

    </LinearLayout>
