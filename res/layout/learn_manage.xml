<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:background="@drawable/titlelayout_bg_normal">
        <TextView 
            android:id="@+id/text_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文章总数："
            android:textSize="25dip"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"/>
        <TextView 
            android:id="@+id/art_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="20dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text_count"/>
    </RelativeLayout>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*长按进行删除操作*"
        android:background="@drawable/titlelayout_bg_normal"
        android:gravity="center"/>
        <ListView 
            android:id="@+id/learn_manager_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
    	</ListView>

    
    
    <RelativeLayout 
        android:id="@+id/learn_manage_add_learn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_item_top_bottom_line_selector"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添      加"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:textSize="25dip"
           />
    </RelativeLayout>
    
</LinearLayout>
