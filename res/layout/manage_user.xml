<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入查找的用户名:"/>
        <EditText 
            android:id="@+id/search_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        
        <Button 
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"/>
    </LinearLayout>
    
    <ListView 
        android:id="@+id/show_user_listview"
        android:layout_width="match_parent"
        android:background="@drawable/top_bottom_gray_line_normal"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/titlelayout_bg_normal">
            
            <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名："
            />
            <EditText 
                android:id="@+id/show_user_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="密码："/>
            <EditText 
                android:id="@+id/show_user_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
         <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/titlelayout_bg_normal">
            
             <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号："/>
             <EditText 
                 android:id="@+id/show_user_phone"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 />
            </LinearLayout>
        <Button 
            android:id="@+id/save_info_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存当前信息"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="*点击用户名，自动匹配信息\n*长按用户名进行删除"/>
</LinearLayout>
